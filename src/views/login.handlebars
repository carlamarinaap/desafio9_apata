<div class="container-fluid bg-light p-3">
  <div class="container p-3">
    <h1 class="text-center p-3"> Login</h1>
    <div class="text-danger text-center m-2">{{this.msg}}</div>
    <form id="productForm" method="post" action="/api/sessions/login">
      <div class="mb-1 mx-5">
        <label class="form-label align-self-center" for="email">Email</label>
        <input class="form-control" type="text" name="email" id="email" />
      </div>
      <div class="mb-1 mx-5">
        <label class="form-label align-self-center" for="password">Contraseña</label>
        <input class="form-control" type="password" name="password" id="password" />
      </div>
      <div class="pb-1 mx-5 text-center d-flex justify-content-between">
        <button class="btn btn-success" type="submit">Entrar</button>
        <a href="/passwordRestore">Olvidé mi contraseña</a>
      </div>
    </form>
    <div class="container text-center">
      <div class="d-flex justify-content-center m-2">
        <a class="btn btn-outline-success mx-2" href="/register">Registrate</a>
        <a class="btn btn-dark mx-2" href="/api/sessions/github">Entrar con Github</a>
      </div>
    </div>
  </div>
</div>